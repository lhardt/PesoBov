<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="1dp"
    android:layout_gravity="center|top"
    card_view:cardCornerRadius="0dp"
    android:padding="5dp"
    android:layout_marginBottom="0dp">


    <!-- TODO: make a scrollview so that the
         user can see all the names of the vaccines -->
        <RelativeLayout
            android:background="@color/prim_dark"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cow_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:padding="5dp"
                android:text="Numeração:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cow_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/cow_id_title"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@{cow.id}" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@color/prim_dark"
                android:src="@drawable/ic_visibility_black_24dp"
                android:textAlignment="textEnd"
                android:layout_margin="4dp"
                 />



        </RelativeLayout>

</android.support.v7.widget.CardView>